FROM golang:1.21-alpine AS builder

WORKDIR /app

# Копируем go.mod и go.sum (когда они появятся)
COPY go.mod go.sum* ./
RUN go mod download

# Копируем исходники
COPY . .

# Собираем бинарник
RUN CGO_ENABLED=0 GOOS=linux go build -o /api ./cmd/api

# Финальный образ
FROM alpine:latest

RUN apk --no-cache add ca-certificates

WORKDIR /root/

COPY --from=builder /api .

EXPOSE 8080

CMD ["./api"]